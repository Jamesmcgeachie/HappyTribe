<div class="opportunity">
	<p>Name: <%= @opportunity.name %></p>
	<p>Location: <%= @opportunity.location %></p>
	<p>Organization: <%= link_to @opportunity.organization.name, organization_path(@opportunity.organization) %></p>
</div>


<div id="timeslot-list">
	<% if logged_in? %>
		<%= render partial: 'timeslots/timeslot', collection: @opportunity.timeslots.order(start_time: :asc) %>
	<% else %>
		<p><a href="/login">Login</a> to volunteer at this event</p>
	<% end %>
</div>
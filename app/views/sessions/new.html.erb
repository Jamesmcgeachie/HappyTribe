<div class="login-form">
	<h1>Login to Happy Tribe</h1>
	<%= form_tag sessions_path do %>
		<p>
			<%= label_tag :email %>
			<%= text_field_tag :email, params[:email] %>
		</p>
		<p>
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</p>
		<p> <%= submit_tag "Login", class: "button" %> </p>
	<% end %>
	<%= link_to 'Login with Github', auth_at_provider_path(:provider => :github) %>
	<%= link_to 'Login with google', auth_at_provider_path(:provider => :google) %>
	<%= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook) %>
</div>
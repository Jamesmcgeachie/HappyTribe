<div class="event">
  <div class="large-4 medium-6 small-12 columns">
    <ul class="pricing-table active-tb shadow mrgn-20-top">
      <li class="title"><span id="event_name"><%= link_to event.name, event_path(event) %></span><br/><span id="event_role"><%= link_to event.role, event_path(event) %></span>
      <li class="image"><%= image_tag event.event_image.url(:mobile) if event.event_image.present? %></li>
      <li class="bullet-item" id="org_name"><%= link_to event.organization.name, organization_path(event.organization) %></li>
      <li class="bullet-item"><%= event.start_time.strftime("%b %d, %Y | %I:%M %p") %> - <%= event.end_time.strftime("%I:%M %p") %></li>


      <li class="bullet-item"><%= event.location %></li>
      <div id="timeslot-list">
        <li class="bullet-item"><p>Choose a time to volunteer</p>
          <ul class="button-group radius">
            <li>
              <a href="#" ><%= render partial: 'timeslots/timeslot', collection: event.timeslots.order(start_time: :asc) %></a>
            </li>
          </ul>
          or
          <%= render partial: 'bookmarks/form', locals: { event: event } %>
        </li>
        <li>
          <small><%= event.total_volunteers %> / <%= event.capacity %> Volunteer Spots Filled</small>
          <div class="progress secondary alert success radius">
              <span class="meter" style="width: <%= event.progress %>%"></span>
          </div>
        </li>
      </div>
       </ul>
    </div>
</div>